<!doctype html>
<html lang="en">
<%- include('partials/head') %>


  <body class="form-cargabody">
    <%- include('partials/header') %>
      <h2 class="titulocarga container">Carga de producto</h2>
        <div class="form-carga container">
            <form>
                <div class="form-row">
                    <div class="titulo col-md-4 mb-3">
                        <label for="titulo">Título *</label>
                        <input type="text" class="form-control" id="titulo-producto" placeholder="Ej. Tagliatelle" required>
                    </div>
                    <div class="ingredientes col-md-4 mb-3">
                        <label for="ingredientes">Ingredientes principales *</label>
                        <input type="text" class="form-control" id="ingredientes" placeholder="Ej. zucchini, tomate y queso..." required>
                    </div>
                    <div class="precio col-md-4 mb-3">
                        <label for="precio">Precio *</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                            </div>
                            <input type="number" class="form-control" id="precio" placeholder="Ej. 399,99" required>                            
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="descuento col-md-4 mb-3">
                        <label for="descuento">Descuento</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="descuento" placeholder="Ej. 15">
                            <div class="input-group-prepend">
                                <span class="derecha input-group-text">%</span>
                            </div>                           
                        </div>
                    </div>
                    <div class="foto1 col-md-4 mb-3">
                        <label for="foto1">Foto Principal *</label>
                        <input type="file" class="form-control upload" id="foto1" accept="image/*" required>
                    </div>
                    <div class="fotos2 col-md-4 mb-3">
                        <label for="foto2">Fotos adicionales</label>
                        <input type="file" class="form-control upload" id="foto2" accept="image/*" multiple="multiple">
                    </div>                    
                </div>
                <div class="form-row">
                    <div class="seccion col-md-4 mb-3">
                        <label for="seccion">Sección *</label>
                        <div class="input-group">
                            <select id="seccion" name="seccion" required>
                                <option value="">Seleccionar..</option>
                                <option value="med">Mediterranea</option>
                                <option value="mex">Mexicana</option>
                                <option value="ita">Italiana</option>
                                <option value="sui">Suiza</option>
                                <option value="esp">Española</option>
                                <option value="vin-tjov">VINOS - Tinto Joven</option>
                                <option value="vin-tres">VINOS - Tinto Reserva</option>
                                <option value="vin-bjov">VINOS - Blanco Joven</option>
                                <option value="vin-bres">VINOS - Blanco Reserva</option>
                            </select>
                        </div>
                    </div>
                    <div class="tiempo col-md-4 mb-3">
                            <label for="tiempo-prep">Tiempo de preparación</label>
                            <div class="input-group">
                                <select id="tiempo-prep" name="tiempo-prep">
                                    <option value="">Seleccionar..</option>
                                    <option value="15">15 minutos</option>
                                    <option value="20">20 minutos</option>
                                    <option value="30">30 minutos</option>
                                    <option value="45">45 minutos</option>
                                    <option value="60">1 hora</option>
                                    <option value="90">1 hora 30 minutos</option>
                                </select>
                            </div>
                    </div>
                    <div class="mostrar col-md-4 mb-3">
                        <label for="mostrar">Mostrar en</label>
                        <div class="input-group">
                            <label for="mostrar-1" class="checks">
                                <input type="checkbox" name="mostrar1" id="oferta" value="oferta">
                                Ofertas
                            </label>
                            <label for="mostrar-2" class="checks">
                                <input type="checkbox" name="mostrar2" id="especialidades" value="especialidades">
                                Especialidades
                            </label>
                        </div>
                    </div>
                        
                </div>
                <div class="form-row">
                    <div class="apto col-md-4 mb-3">
                        <label for="apto">Apto</label>
                        <div class="input-group">
                            <label for="apto-1" class="checks">
                                <input type="checkbox" name="apto1" id="vegano" value="vegano">
                                Vegano
                            </label>
                            <label for="apto-2" class="checks">
                                <input type="checkbox" name="apto2" id="vegetariano" value="vegetariano">
                                Vegetariano
                            </label>
                            <label for="apto-3" class="checks">
                                <input type="checkbox" name="apto3" id="tacc" value="tacc">
                                Sin TACC
                            </label>
                        </div>
                    </div>
                    <div class="porciones col-md-4 mb-3">
                        <label for="porciones">Porciones por unidad *</label>
                        <div class="input group">
                            <select id="porciones" name="porciones" required>
                                <option value=""></option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                            </select>
                        </div>
                    </div>
                    <div class="calorias col-md-4 mb-3">
                        <label for="calorias">Calorías</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="calorias" placeholder="Ej. 650">
                            <div class="input-group-prepend">
                                <span class="derecha input-group-text">calorías / porción</span>
                            </div>                           
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="maridaje col-md-4 mb-3">
                        <label for="maridaje">Maridaje</label>
                        <div class="input-group">
                            <select id="seccion" name="seccion">
                                <option value="">Seleccionar..</option>
                                <option value="tint-all">Tintos</option>
                                <option value="tint-jov">Tintos Joven</option>
                                <option value="tint-res">Tintos Reserva</option>
                                <option value="bla-all">Blancos</option>
                                <option value="bla-jov">Blancos Joven</option>
                                <option value="bla-res">Blancos Reserva</option>
                                <option value="jov-all">Sólo Jovenes</option>
                                <option value="res-all">Sólo Reserva</option>
                            </select>
                        </div>
                    </div>
                    <div class="receta col-md-4 mb-3">
                        <label for="receta">Receta *</label>
                        <input type="file" class="form-control upload" id="receta" accept="application/pdf">
                    </div>
                    
                </div>

            
                



                <div class="botones container">
                    <div class="cargar">
                        <button class="btn btn-primary" type="submit">Cargar producto</button>
                    </div>
                    <div class="limpiar">
                        <button class="btn btn-danger" type="reset"> Limpiar formulario</button>
                    </div>
                </div>
            </form>
        </div>
    <%- include('partials/footer') %>    
  </body>
</html>