    <body class="form-cargabody editarProduct">

        <div class="fondoProducto">
            <div class="formProducto">
                <h2 class="titulocarga container">Editar de Producto</h2>
                <div class="form-carga container">
                    <form action="/productos/<%- producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="titulo col-md-5 mb-3">
                                <label for="titulo">Título *</label>
                                <input type="text" class="form-control" id="titulo-producto" name="name" value="<%- producto.nombre %> ">
                            </div>
                            <div class="seccion col-md-2 mb-3">
                                <label for="seccion">Categoría *</label>
                                <div class="form-group">
                                    <select id="seccion" name="categoria" class="form-control">
                                            <option value="<%- producto.idCategory %>"><%- producto.idCategory %> </option>
                                            <option value="med">Mediterranea</option>
                                            <option value="mex">Mexicana</option>
                                            <option value="ita">Italiana</option>
                                            <option value="sui">Suiza</option>
                                            <option value="esp">Española</option>
                                            <option value="vin-tjov">VINOS - Tinto Joven</option>
                                            <option value="vin-tres">VINOS - Tinto Reserva</option>
                                            <option value="vin-bjov">VINOS - Blanco Joven</option>
                                            <option value="vin-bres">VINOS - Blanco Reserva</option>
                                        </select>
                                </div>
                            </div>
                            <!--<div class="foto1 col-md-4 mb-3">
                                   <label for="image">Fotos *</label>
                                    <input type="file" class="form-control upload" id="imagen" accept="image/*" multiple="multiple" name="image" value="<%- producto.image %>">
                                </div>-->
                            <div class="precio col-md-2 mb-3">
                                <label for="precio">Precio *</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <input type="text" class="form-control" id="precio" name="precio" value="<%- producto.precio %>">
                                </div>
                            </div>
                            <div class="descuento col-md-3 mb-3">
                                <label for="descuento">Descuento</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="descuento" name="discount" value="<%- producto.descuento %>">
                                    <div class="input-group-prepend">
                                        <span class="derecha input-group-text">%</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-row">

                            <div class="col-md-3 imagen">
                                <img src="/images/products/<%= (producto.imagenes.split(','))[0] %>" class="img-thumbnail ">
                                <div>
                                    <input type="checkbox" name="elimina" value=""> Eliminar
                                </div>

                            </div>

                            <input type="file" class="input-control" id="imagenes" accept="image/*" multiple="multiple" name="imagen">


                        </div>
                        <div class="form-row">
                            <!-- <div class="ingredientes col-md-4 mb-3">
                                    <label for="ingredientes">Descripción *</label>
                                    <input type="text" class="form-control" id="descripcion" name="descripcion" value="<%- producto.description %> ">
                                </div> -->
                            <div class="ingredientes col-md-12 mb-12">
                                <label for="ingredientes">Descripción *</label>
                                <p><textarea class="form-control" id="descripcion" name="descripcion" maxlength="500" rows="8"><%- producto.descripcion %></textarea></p>
                            </div>

                        </div>
                        <div class="form-row">
