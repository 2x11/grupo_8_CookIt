<!doctype html>
<html lang="en">
<%- include('partials/head') %>


    <body class="form-cargabody">
        <%- include('partials/header') %>
            <h2 class="titulocarga container">Carga de producto</h2>
            <div class="form-carga container">
                <form action="/productos" method="POST" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="titulo col-md-4 mb-3">
                            <label for="titulo">Título *</label>
                            <input type="text" class="form-control" id="titulo-producto" placeholder="Ej. Tagliatelle" name="titulo">
                        </div>
                        <div class="ingredientes col-md-4 mb-3">
                            <label for="ingredientes">Descripción *</label>
                            <input type="text" class="form-control" id="descripcion" placeholder="Ej. zucchini, tomate y queso..." name="descripcion">
                        </div>
                        <div class="precio col-md-4 mb-3">
                            <label for="precio">Precio *</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input type="number" class="form-control" id="precio" placeholder="Ej. 399,99" name="precio">
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="descuento col-md-4 mb-3">
                            <label for="descuento">Descuento</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="descuento" placeholder="Ej. 15" name="discount">
                                <div class="input-group-prepend">
                                    <span class="derecha input-group-text">%</span>
                                </div>
                            </div>
                        </div>
                        <div class="foto1 col-md-4 mb-3">
                            <label for="image">Foto Principal *</label>
                            <input type="file" class="form-control upload" id="imagen" accept="image/*" name="image">
                        </div>
                        <div class="images col-md-4 mb-3">
                            <label for="foto2">Fotos adicionales</label>
                            <input type="file" class="form-control upload" id="imagenes" accept="image/*" multiple="multiple" name="images" disabled>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="seccion col-md-4 mb-3">
                            <label for="seccion">Categoría *</label>
                            <div class="input-group">
                                <select id="seccion" name="categoria">
                                <option value="">Seleccionar..</option>
                                <option value="med">Mediterranea</option>
                                <option value="mex">Mexicana</option>
                                <option value="ita">Italiana</option>
                                <option value="sui">Suiza</option>
                                <option value="esp">Española</option>
                                <option value="vin-tjov">VINOS - Tinto Joven</option>
                                <option value="vin-tres">VINOS - Tinto Reserva</option>
                                <option value="vin-bjov">VINOS - Blanco Joven</option>
                                <option value="vin-bres">VINOS - Blanco Reserva</option>
                            </select>
                            </div>
                        </div>
                        <div class="tiempo col-md-4 mb-3">
                            <label for="tiempo-prep">Tiempo de preparación</label>
                            <div class="input-group">
                                <select id="tiempo-prep" name="tiempo">
                                    <option value="">Seleccionar..</option>
                                    <option value="15">15 minutos</option>
                                    <option value="20">20 minutos</option>
                                    <option value="30">30 minutos</option>
                                    <option value="45">45 minutos</option>
                                    <option value="60">1 hora</option>
                                    <option value="90">1 hora 30 minutos</option>
                                </select>
                            </div>
                        </div>
                        <div class="mostrar col-md-4 mb-3">
                            <label for="mostrar">Mostrar en</label>
                            <div class="input-group">
                                <label for="mostrar-1" class="checks">
                                <input type="checkbox" name="oferta" id="oferta" disabled>
                                Ofertas
                            </label>
                                <label for="mostrar-2" class="checks">
                                <input type="checkbox" name="especial" id="especialidades" disabled>
                                Especialidades
                            </label>
                            </div>
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="apto col-md-4 mb-3">
                            <label for="apto">Apto</label>
                            <div class="input-group">
                                <label for="bajosodio" class="checks">
                                <input type="checkbox" name="bajosodio" id="bajosodio" disabled>
                                Bajo en sodio
                            </label>
                                <label for="vegano" class="checks">
                                <input type="checkbox" name="vegano" id="vegano" disabled>
                                Vegano
                            </label>
                                <label for="celiaco" class="checks">
                                <input type="checkbox" name="celiaco" id="celiaco" disabled>
                                Sin TACC
                            </label>
                            </div>
                        </div>
                        <div class="porciones col-md-4 mb-3">
                            <label for="porciones">Porciones por unidad *</label>
                            <div class="input group">
                                <select id="porciones" name="porciones" disabled> 
                                <option value=""></option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                            </select>
                            </div>
                        </div>
                        <div class="calorias col-md-4 mb-3">
                            <label for="calorias">Calorías</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="calorias" placeholder="Ej. 650" name="calorias" disabled>
                                <div class="input-group-prepend">
                                    <span class="derecha input-group-text">calorías / porción</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="maridaje col-md-4 mb-3">
                            <label for="maridaje">Maridaje</label>
                            <div class="input-group">
                                <select id="seccion" name="maridaje" disabled>
                                <option value="">Seleccionar..</option>
                                <option value="tint-all">Tintos</option>
                                <option value="tint-jov">Tintos Joven</option>
                                <option value="tint-res">Tintos Reserva</option>
                                <option value="bla-all">Blancos</option>
                                <option value="bla-jov">Blancos Joven</option>
                                <option value="bla-res">Blancos Reserva</option>
                                <option value="jov-all">Sólo Jovenes</option>
                                <option value="res-all">Sólo Reserva</option>
                            </select>
                            </div>
                        </div>
                        <div class="receta col-md-4 mb-3">
                            <label for="receta">Receta *</label>
                            <input type="file" class="form-control upload" id="receta" accept="application/pdf" name="receta" disabled>
                        </div>

                    </div>

                    <div class="botones container">
                        <div class="cargar">
                            <button class="btn btn-primary" type="submit">Cargar producto</button>
                        </div>
                        <div class="limpiar">
                            <button class="btn btn-danger" type="reset"> Limpiar formulario</button>
                        </div>
                    </div>
                </form>
            </div>
            <%- include('partials/footer') %>
    </body>

</html>